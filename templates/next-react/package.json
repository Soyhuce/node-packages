{
  "name": "next-react",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "git init --initial-branch=main && husky install",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "stylelint": "stylelint '**/*.{css,scss}' --aei",
    "stylelint:fix": "stylelint '**/*.{css,scss}' --fix --aei",
    "test:unit": "jest --coverage",
    "test:e2e": "playwright install && playwright test",
    "commitlint": "commitlint --edit $1"
  },
  "dependencies": {
    "next": "^12.1.6",
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/cz-commitlint": "^17.0.0",
    "@next/eslint-plugin-next": "^12.1.6",
    "@playwright/test": "^1.22.2",
    "@soyhuce/css-reset": "^2.0.0",
    "@soyhuce/commitlint-config": "^2.0.0",
    "@soyhuce/eslint-config": "^2.0.0",
    "@soyhuce/eslint-config-jest": "^2.0.0",
    "@soyhuce/eslint-config-react": "^2.0.0",
    "@soyhuce/playwright-config": "^2.1.0",
    "@soyhuce/prettier-config": "^2.0.0",
    "@soyhuce/stylelint-config": "^2.0.0",
    "@soyhuce/stylelint-config-scss": "^2.0.0",
    "@soyhuce/stylelint-config-tailwindcss": "^2.0.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "autoprefixer": "^10.4.7",
    "commitizen": "^4.2.4",
    "cssnano": "^5.1.11",
    "eslint": "^8.17.0",
    "husky": "^8.0.1",
    "jest": "^28.1.1",
    "next-transpile-modules": "^9.0.0",
    "postcss": "^8.4.14",
    "prettier": "^2.6.2",
    "sass": "^1.52.3",
    "stylelint": "^14.9.0",
    "tailwindcss": "^3.1.1",
    "typescript": "^4.7.3"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "inquirer"
      ],
      "allowedVersions": {
        "react": "18",
        "react-dom": "18"
      }
    }
  }
}
